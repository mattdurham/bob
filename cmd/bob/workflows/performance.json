{
  "keyword": "performance",
  "name": "Performance Optimization Cycle",
  "description": "Benchmark, analyze, optimize, and verify: INIT → PROMPT → WORKTREE → BENCHMARK → ANALYZE → OPTIMIZE → VERIFY → (loop if needed) → COMMIT → MONITOR → COMPLETE",
  "steps": [
    {
      "name": "INIT",
      "description": "Initial state - gather performance goals"
    },
    {
      "name": "PROMPT",
      "description": "Ask user what they want to optimize"
    },
    {
      "name": "WORKTREE",
      "description": "Worktree created and ready for performance work"
    },
    {
      "name": "BENCHMARK",
      "description": "Establish baseline performance metrics"
    },
    {
      "name": "ANALYZE",
      "description": "Identify performance bottlenecks"
    },
    {
      "name": "OPTIMIZE",
      "description": "Implement performance improvements"
    },
    {
      "name": "VERIFY",
      "description": "Measure improvements and verify targets",
      "canLoopTo": ["ANALYZE"]
    },
    {
      "name": "COMMIT",
      "description": "Commit performance improvements"
    },
    {
      "name": "MONITOR",
      "description": "Monitor PR/CI",
      "canLoopTo": ["ANALYZE"]
    },
    {
      "name": "COMPLETE",
      "description": "Cleanup and finish"
    }
  ],
  "loopRules": [
    {
      "fromStep": "VERIFY",
      "toStep": "ANALYZE",
      "condition": "targets_not_met",
      "description": "Performance targets not achieved, need more optimization"
    },
    {
      "fromStep": "MONITOR",
      "toStep": "ANALYZE",
      "condition": "ci_failed_or_feedback",
      "description": "Re-analyze issues before fixing"
    }
  ]
}
